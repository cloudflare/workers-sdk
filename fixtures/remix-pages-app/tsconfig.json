{
	"include": ["remix.env.d.ts", "**/*.ts", "**/*.tsx"],
	"exclude": ["tests"],
	"compilerOptions": {
		"lib": ["DOM", "DOM.Iterable", "ES2019"],
		"isolatedModules": true,
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"target": "ES2019",
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"~/*": ["./app/*"]
		},
		"noEmit": true,
		"skipLibCheck": true,
		"types": [],
		"allowJs": true,
		"forceConsistentCasingInFileNames": true
	}
}

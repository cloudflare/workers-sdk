{
	"compilerOptions": {
		"target": "ES2020",
		"esModuleInterop": true,
		"module": "CommonJS",
		"lib": ["ES2020"],
		"types": ["node", "@cloudflare/workers-types"],
		"moduleResolution": "node",
		"noEmit": true,
		"skipLibCheck": true,
		"checkJs": true
	},
	"include": [
		"apps/workerjs-directory/_worker.js/index.js",
		"apps/workerjs-file/_worker.js",
		"functions/[[path]].ts",
		"tests",
		"../../node-types.d.ts"
	]
}

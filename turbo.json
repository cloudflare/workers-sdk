{
	"$schema": "http://turbo.build/schema.json",
	"remoteCache": {
		"signature": true
	},
	"globalEnv": ["CI_OS", "NODE_VERSION"],
	"pipeline": {
		"wrangler#dev": {
			"persistent": true,
			"cache": false
		},
		"miniflare#dev": {
			"persistent": true,
			"cache": false
		},
		"@cloudflare/vitest-pool-workers#dev": {
			"persistent": true,
			"cache": false
		},
		"build": { "dependsOn": ["^build"] },
		"test": {
			"dependsOn": ["^build", "build"]
		},
		"test:watch": {
			"cache": false
		},
		"check:lint": {},
		"check:type": {},
		"type:tests": {},
		"test:ci": {
			"dependsOn": ["^build", "build"]
		},
		"test:e2e": {},
		"//#check:format": { "cache": true }
	}
}

{
	"$schema": "http://turbo.build/schema.json",

	"pipeline": {
		"wrangler#dev": {
			"persistent": true,
			"cache": false
		},
		"build": { "dependsOn": ["^build"] },
		"test": {
			"dependsOn": ["^build"]
		},
		"test:watch": {
			"cache": false
		},
		"check:lint": {
			"dependsOn": ["^topological"]
		},
		"check:type": {
			"dependsOn": ["wrangler#build"]
		},
		"topological": {
			"dependsOn": ["^topological"]
		},
		"type:tests": {},
		"test:ci": {},
		"//#check:format": { "cache": true }
	}
}

{
	"preset": "ts-jest/presets/default-esm",
	"globals": {
		"ts-jest": {
			"useESM": true
		}
	},
	"transform": {
		"^.+\\.(t|j)sx?$": "ts-jest"
	},
	"testRegex": "/test/.*\\.(test|spec)\\.(ts|tsx|js)$",
	"testEnvironment": "miniflare",
	"testEnvironmentOptions": {
		"scriptPath": "./src/index.ts",
		"modules": true
	},
	"collectCoverageFrom": ["src/**/*.{ts,js,jsx}"]
}

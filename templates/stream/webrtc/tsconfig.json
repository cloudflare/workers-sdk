{
	"compilerOptions": {
		"allowJs": true,
		"outDir": "./dist",
		"module": "es6",
		"target": "ES2017",
		"lib": ["esnext", "DOM"],
		"strict": true,
		"preserveConstEnums": true,
		"moduleResolution": "node",
		"sourceMap": false, // Disabled to prevent dev errors
		"esModuleInterop": true
	},
	"include": [
		"./index.ts",
		"./src/*.ts",
		"./src/**/*.ts",
		"./workersTestHelpers/*.ts",
		"./workersTestHelpers/**/*.ts",
		"./test/*.ts",
		"./test/**/*.ts",
		"node_modules/stream-proto"
	],
	"exclude": ["node_modules/", "dist/"],
	"ts-node": {
		"swc": true
	}
}

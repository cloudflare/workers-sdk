{
	"name": "@vite-plugin-cloudflare/playground",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"check:types": "tsc --build",
		"test:build": "cross-env VITE_TEST_BUILD=1 vitest run -c vitest.config.e2e.ts",

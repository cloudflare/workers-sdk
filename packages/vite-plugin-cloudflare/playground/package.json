	},
	"devDependencies": {
		"@cloudflare/vite-plugin": "workspace:*",
		"@cloudflare/workers-tsconfig": "workspace:*",
		"playwright-chromium": "^1.48.1",
		"typescript": "catalog:vite-plugin"
	}
}

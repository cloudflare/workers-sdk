{
	"extends": "@cloudflare/workers-tsconfig/tsconfig.json",
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "bundler",
		"target": "ES2022",
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"outDir": "./dist",
		"types": ["node"]
	},
	"include": ["src/**/*", "index.ts"],
	"exclude": ["dist", "node_modules"]
}

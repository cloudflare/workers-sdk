{
	"id": "env-secrets",
	"displayName": "Worker with Environment Variables and Secrets",
	"platform": "workers",
	"languages": ["js", "ts"],
	"copyFiles": {
		"js": {
			"path": "./js"
		},
		"ts": {
			"path": "./ts"
		}
	},
	"bindings": {
		"secrets": [
			{
				"boundVariable": "SECRET_TOKEN",
				"description": "Enter a secret value that will be used for secret things"
			}
		],
		"env": [
			{
				"boundVariable": "ANALYTICS_ID",
				"description": "Enter your Analytics Client ID"
			},
			{
				"boundVariable": "SENTRY_DSN",
				"description": "Enter your Sentry DSN"
			}
		]
	}
}

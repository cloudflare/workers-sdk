{
	"root": true,
	"extends": "@cloudflare/workers-tsconfig/tsconfig.json",
	"include": ["**/*.ts", "templates/*/c3.ts"],
	"exclude": [
		"node_modules",
		"dist",
		// exclude all template files other than the top level ones so
		// that we can catch `c3.ts`. For example, any top level files in
		// templates/angular/ will be included, but any directories will not
		"templates/*/*/**"
	],
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"moduleResolution": "node",
		"allowJs": true,
		"strict": true,
		"esModuleInterop": true,
		"outDir": "dist",
		"types": ["node"],
		"resolveJsonModule": true,
		"paths": {
			"helpers/*": ["./src/helpers/*"],
			"templates/*": ["./templates/*"],
			"frameworks/*": ["./src/frameworks/*"],
			"types": ["./src/types.ts"]
		}
	}
}

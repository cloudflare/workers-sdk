{
	"$schema": "http://turbo.build/schema.json",
	"extends": ["//"],
	"tasks": {
		"build": {
			"env": [
				"TMPDIR",
				"TMP",
				"TEMP",
				"TEST_PM",
				"TEST_PM_VERSION",
				"npm_config_user_agent",
				"CI"
			],
			"outputs": ["dist/**"]
		},
		"test:e2e": {
			"env": [
				"TMPDIR",
				"TMP",
				"TEMP",
				"TEST_PM",
				"TEST_PM_VERSION",
				"npm_config_user_agent",
				"CI",
				"SAVE_DIFFS",
				"CLOUDFLARE_ACCOUNT_ID",
				"CLOUDFLARE_API_TOKEN",
				"FRAMEWORK_CLI_TO_TEST",
				"E2E_QUARANTINE",
				"E2E_PROJECT_PATH",
				"E2E_RETRIES",
				"E2E_NO_DEPLOY"
			],
			"dependsOn": ["build"]
		}
	}
}

{
	"$schema": "http://turbo.build/schema.json",
	"extends": ["//"],
	"tasks": {
		"build": {
			"env": [
				"TEST_PM",
				"TEST_PM_VERSION",
				"npm_config_user_agent",
				"CREATE_CLOUDFLARE_TELEMETRY_DISABLED",
				"CREATE_CLOUDFLARE_TELEMETRY_DEBUG",
				"SPARROW_SOURCE_KEY"
			],
			"inputs": [
				"$TURBO_DEFAULT$",
				"!e2e-tests/**",
				"!src/__tests__/**",
				"!vitest.config.mts"
			],
			"outputs": ["dist/**"]
		},
		"test:ci": {
			"dependsOn": ["build"]
		},
		"test:e2e": {
			"env": [
				"NODE_DEBUG",
				"CLOUDFLARE_ACCOUNT_ID",
				"CLOUDFLARE_API_TOKEN",
				"FRAMEWORK_CLI_TO_TEST",
				"E2E_QUARANTINE",
				"E2E_PROJECT_PATH",
				"E2E_RETRIES",
				"E2E_NO_DEPLOY",
				"E2E_EXPERIMENTAL",
				"TEST_PM",
				"TEST_PM_VERSION"
			],
			"dependsOn": ["build"],
			"inputs": ["e2e-tests/**"],
			"outputs": [".e2e-logs", ".e2e-logs-experimental"]
		}
	}
}

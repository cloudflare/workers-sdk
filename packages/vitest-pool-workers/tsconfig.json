{
	"extends": "@cloudflare/workers-tsconfig/tsconfig.json",
	"compilerOptions": {
		"alwaysStrict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"lib": ["esnext"]
	},
	"exclude": ["./scripts/**/rtti.ts"],
	"include": [
		"./scripts/**/*",
		"./src/pool/**/*.ts",
		"./src/shared/**/*.ts",
		"./test/**/*.ts",
		"./vitest.config.*ts",
		"./vitest.workspace.ts",
		"./tsdown.config.ts"
	]
}

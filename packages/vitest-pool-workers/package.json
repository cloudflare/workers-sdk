{
	"name": "@cloudflare/vitest-pool-workers",
	"version": "0.11.1",
	"description": "Workers Vitest integration for writing Vitest unit and integration tests that run inside the Workers runtime",
	"keywords": [
		"cloudflare",
		"workers",
		"worker",
		"vitest",
		"jest",
		"pool",
		"environment",
		"miniflare",
		"unit",
		"integration",
		"test"
	],
	"homepage": "https://github.com/cloudflare/workers-sdk/tree/main/packages/vitest-pool-workers#readme",
	"bugs": {
		"url": "https://github.com/cloudflare/workers-sdk/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/cloudflare/workers-sdk.git",
		"directory": "packages/vitest-pool-workers"
	},
	"license": "MIT",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/pool/index.d.mts",
			"import": "./dist/pool/index.mjs"
		},
		"./types": {
			"types": "./types/cloudflare-test.d.ts"
		}
	},
	"main": "dist/pool/index.mjs",
	"types": "dist/pool/index.d.mts",
	"files": [
		"dist",
		"types/cloudflare-test.d.ts"
	],
	"scripts": {
		"build": "tsdown",
		"capnp:rtti": "capnp-es scripts/rtti/rtti.capnp -ojs",
		"check:lint": "eslint .  --max-warnings=0",
		"check:type": "tsc && tsc -p src/worker/tsconfig.json && tsc -p types/tsconfig.json",
		"dev": "node scripts/bundle.mjs watch",
		"test": "vitest run",
		"test:ci": "vitest run"
	},
	"dependencies": {
		"cjs-module-lexer": "^1.2.3",
		"devalue": "^5.3.2",
		"esbuild": "catalog:default",
		"miniflare": "workspace:*",
		"semver": "^7.7.1",
		"wrangler": "workspace:*",
		"zod": "^3.22.3"
	},
	"devDependencies": {
		"@cloudflare/eslint-config-shared": "workspace:*",
		"@cloudflare/mock-npm-registry": "workspace:*",
		"@cloudflare/workers-tsconfig": "workspace:*",
		"@cloudflare/workers-types": "catalog:default",
		"@cloudflare/workflows-shared": "workspace:*",
		"@types/node": "catalog:default",
		"@types/semver": "^7.5.1",
		"@vitest/runner": "catalog:default",
		"@vitest/snapshot": "catalog:default",
		"capnp-es": "^0.0.11",
		"eslint": "catalog:default",
		"ts-dedent": "^2.2.0",
		"tsdown": "0.16.3",
		"typescript": "catalog:default",
		"undici": "catalog:default",
		"vitest": "catalog:default"
	},
	"peerDependencies": {
		"@vitest/runner": "4.0.16",
		"@vitest/snapshot": "4.0.16",
		"vitest": "4.0.16"
	},
	"volta": {
		"extends": "../../package.json"
	},
	"workers-sdk": {
		"prerelease": true
	}
}

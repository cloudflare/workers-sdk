{
	"name": "@cloudflare/vitest-pool-workers",
	"version": "0.0.1",
	"private": true,
	"main": "dist/pool/index.mjs",
	"exports": {
		".": "./dist/pool/index.mjs",
		"./config": {
			"require": "./dist/config/index.cjs",
			"types": "./dist/config/index.d.ts"
		}
	},
	"scripts": {
		"build": "node scripts/bundle.mjs && tsc -p tsconfig.emit.json",
		"dev": "node scripts/bundle.mjs watch",
		"check:lint": "eslint .",
		"check:type": "tsc && tsc -p src/worker/tsconfig.json && tsc -p test/tsconfig.json",
		"test": "vitest --config vitest.workers.config.ts --reporter=basic",
		"test:ci": "vitest --config vitest.workers.config.ts --reporter=basic"
	},
	"devDependencies": {
		"@cloudflare/eslint-config-worker": "workspace:*",
		"@cloudflare/workers-tsconfig": "workspace:*",
		"@cloudflare/workers-types": "^4.20231121.0",
		"@types/node": "20.8.3",
		"undici": "^5.28.1"
	},
	"dependencies": {
		"birpc": "0.2.14",
		"cjs-module-lexer": "^1.2.3",
		"devalue": "^4.3.0",
		"esbuild": "^0.19.7",
		"import-meta-resolve": "^4.0.0",
		"miniflare": "workspace:*",
		"zod": "^3.20.6"
	},
	"peerDependencies": {
		"@vitest/runner": "1.1.3",
		"@vitest/snapshot": "1.1.3",
		"vitest": "1.1.3"
	}
}

{
	"compilerOptions": {
		"target": "esnext",
		"lib": ["esnext"],
		"module": "es2022",
		"moduleResolution": "bundler",
		"allowJs": true,
		"checkJs": false,
		"noEmit": true,
		"isolatedModules": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["**/*.test.ts"]
}

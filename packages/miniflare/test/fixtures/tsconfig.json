{
	"compilerOptions": {
		"module": "esnext",
		"target": "esnext",
		"lib": ["esnext"],
		"strict": true,
		"moduleResolution": "node16",
		"isolatedModules": true,
		"experimentalDecorators": true,
		"noEmit": true,
		"types": ["@cloudflare/workers-types/experimental"],
		"paths": {
			"miniflare": ["../../src"],
			"miniflare:shared": ["../../src/workers/shared/index.worker.ts"],
			"miniflare:zod": ["../../src/workers/shared/zod.worker.ts"]
		}
	},
	"include": ["**/*", "unsafe-plugin", "../../src/workers/node.d.ts"]
}

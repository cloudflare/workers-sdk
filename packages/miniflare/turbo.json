{
	"$schema": "http://turbo.build/schema.json",
	"extends": ["//"],
	"pipeline": {
		"build": {
			"inputs": [
				"src/**",
				"scripts/**",
				"types/**",
				"worker-metafiles/**",
				"*.mjs",
				"*.js",
				"*.json"
			],
			"outputs": ["dist/**", "bootstrap.js"],
			"env": [
				"CI_OS"
			]
		},
		"test:ci": {
			"inputs": ["test/**"],
			"dependsOn": ["build"]
		}
	}
}

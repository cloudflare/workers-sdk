{
	"$schema": "http://turbo.build/schema.json",
	"extends": ["//"],
	"tasks": {
		"build": {
			"inputs": ["$TURBO_DEFAULT$", "!test/**", "!ava.config.mjs"],
			"outputs": ["dist/**", "bootstrap.js", "worker-metafiles/**"],
			"env": ["CI_OS"]
		},
		"test:ci": {
			"inputs": [
				"$TURBO_DEFAULT$",
				"!src/**",
				"!scripts/**",
				"!types/**",
				"!*",
				"ava.config.mjs"
			],
			"dependsOn": ["build"],
			"env": ["MINIFLARE_WORKERD_PATH"]
		}
	}
}

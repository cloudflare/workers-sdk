{
	"$schema": "http://turbo.build/schema.json",
	"extends": ["//"],
	"tasks": {
		"build": {
			"inputs": ["$TURBO_DEFAULT$", "!test/**"],
			"outputs": ["dist/**", "bootstrap.js", "worker-metafiles/**"],
			"env": ["CI_OS"]
		},
		"test:ci": {
			"dependsOn": ["build"],
			"env": ["MINIFLARE_WORKERD_PATH", "MINIFLARE_WORKERD_CONFIG_DEBUG"]
		}
	}
}

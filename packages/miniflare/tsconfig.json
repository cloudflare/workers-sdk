{
	"compilerOptions": {
		"module": "esnext",
		"target": "esnext",
		"lib": ["esnext"],
		"strict": true,
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"isolatedModules": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"types": ["node"],
		"outDir": "dist-types",
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"noEmit": false,
		"emitDeclarationOnly": true,
		"rootDir": ".",
		"checkJs": true,
		"allowJs": true,
		"skipLibCheck": true,
		"paths": {
			"miniflare": ["./src"],
			"miniflare:shared": ["./src/workers/shared/index.ts"],
			"miniflare:zod": ["./src/workers/shared/zod.worker.ts"]
		}
	},
	"files": ["test/fixtures/unsafe-plugin/index.ts"],
	"include": [
		"src/**/*.ts",
		"test/**/*.ts",
		"types",
		"test/fixtures/unsafe-plugin/**/*.ts"
	],
	"exclude": ["src/workers/**/*.ts", "src/workers/node.d.ts", "test/fixtures"]
}
